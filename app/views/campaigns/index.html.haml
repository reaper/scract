.px-4.sm:px-6.lg:px-8
  .sm:flex.sm:items-center
    .sm:flex-auto
      %h1.text-base.font-semibold.leading-6.text-gray-900 Campaigns
      %p.mt-2.text-sm.text-gray-700 A list of all campaigns
    .mt-4.sm:ml-16.sm:mt-0.sm:flex-none
      %button.block.rounded-md.bg-indigo-600.px-3.py-2.text-center.text-sm.font-semibold.text-white.shadow-sm.hover:bg-indigo-500.focus-visible:outline.focus-visible:outline-2.focus-visible:outline-offset-2.focus-visible:outline-indigo-600{:type => "button"} Add user
      = link_to 'New Campaign', new_campaign_path, :class => "block.rounded-md.bg-indigo-600.px-3.py-2.text-center.text-sm.font-semibold.text-white.shadow-sm.hover:bg-indigo-500.focus-visible:outline.focus-visible:outline-2.focus-visible:outline-offset-2.focus-visible:outline-indigo-600"
  .mt-8.flow-root
    .-mx-4.-my-2.overflow-x-auto.sm:-mx-6.lg:-mx-8
      .inline-block.min-w-full.py-2.align-middle.sm:px-6.lg:px-8
        %table.min-w-full.divide-y.divide-gray-300
          %thead
            %tr
              %th.pl-4.pr-3.text-left.text-sm.font-semibold.text-gray-900.sm:pl-0{:class => "py-3.5", :scope => "col"} Title
              %th.px-3.text-left.text-sm.font-semibold.text-gray-900{:class => "py-3.5", :scope => "col"} Schedule
              %th.px-3.text-left.text-sm.font-semibold.text-gray-900{:class => "py-3.5", :scope => "col"} Scheduled with
              %th.relative.pl-3.pr-4.sm:pr-0{:class => "py-3.5", :scope => "col"}
                %span.sr-only Edit
          %tbody.divide-y.divide-gray-200
            - @campaigns.each do |campaign|
              %tr
                %td.whitespace-nowrap.py-4.pl-4.pr-3.text-sm.font-medium.text-gray-900.sm:pl-0= campaign.title
                %td.whitespace-nowrap.px-3.py-4.text-sm.text-gray-500= campaign.schedule
                %td.whitespace-nowrap.px-3.py-4.text-sm.text-gray-500= campaign.scheduled_with
                %td.relative.whitespace-nowrap.py-4.pl-3.pr-4.text-right.text-sm.font-medium.sm:pr-0
                  = link_to "Show", campaign, :class => "text-indigo-600 hover:text-indigo-900"
                  |
                  = link_to "Edit", edit_campaign_path(campaign), :class => "text-indigo-600 hover:text-indigo-900"
                  |
                  = link_to "Destroy", campaign, :class => "text-indigo-600 hover:text-indigo-900", data: { turbo_confirm: "Are you sure?", turbo_method: :delete }
